source 'https://rubygems.org'


ruby '2.2.0'
gem 'rails', '4.2.3'
gem 'sass-rails', '~> 5.0'
gem 'uglifier', '>= 1.3.0'
gem 'coffee-rails', '~> 4.1.0'
gem 'jquery-rails'
gem 'turbolinks'
gem 'jbuilder', '~> 2.0'
gem 'sdoc', '~> 0.4.0', group: :doc

# for normalizing the css
gem 'normalize-rails'

# for cms
gem 'comfortable_mexican_sofa'

# for turbolinks
gem 'jquery-turbolinks'

# for fontawesome
gem 'font-awesome-rails'

# for attachment
gem 'paperclip'

# for puma
gem 'puma'

# for aws
gem 'fog'

group :development, :test do
  gem 'sqlite3'
  gem 'byebug'
  gem 'web-console', '~> 2.0'
  gem 'spring'
  # for showing better debug errors
  gem 'better_errors'

  # to enable REPL for better errors
  gem 'binding_of_caller'

  # for chrome app of rails errors in debug
  gem 'meta_request'

  # for environment variables
  gem 'dotenv-rails'
end

group :production do
  gem 'pg'
  gem 'rails_12factor'
end
